#bindsym $mod+Left exec "pulseaudio-ctl mute"

# i3lock
bindsym Ctrl+$mod+Delete exec "i3lock -i $HOME/.i3/themes/i3lock-ArchLinux.png --tiling"

# Random wallpaper with feh
bindsym $mod+Shift+w exec "feh --randomize --bg-fil /media/HDD0/Pictures/Wallpapers"

# Spawn workspaces in my order at start
workspace 1 output DVI-I-1
workspace 2 output DVI-D-0
workspace 3 output HDMI-0
workspace 4 output DVI-I-1

# i3-bar (Middle)
bar {
  output DVI-I-1
	status_command $HOME/.i3/conky.sh
	#tray_output primary
	tray_output none
	position top
	font pango:Terminus 12
	mode dock
  colors {
    separator #666666
    background #000000
    statusline #839496
    focused_workspace #4c7899 #285577 #C0C0C0
    active_workspace #727272 #4F4F4F #C0C0C0
    inactive_workspace #333333 #222222 #C0C0C0
    urgent_workspace #BC5959 #A83838 #FFFFFF
  }
}

